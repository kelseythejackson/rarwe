<div class="rr-controls-panel">
  <div class="rr-sort-panel">
    <select
      class="rr-select"
      data-test-rr="sort-selector"
      {{on "change" this.updateSortBy}}s
    >
      <option
        value="-rating,title"
        data-test-rr="sort-by-rating-desc"
        selected={{eq this.sortBy "-rating,title"}}
      >
        By rating, descending
      </option>
      <option
        value="rating,title"
        data-test-rr="sort-by-rating-asc"
        selected={{eq this.sortBy "rating,title"}}
      >
        By rating, ascending
      </option>
      <option
        value="-title"
        data-test-rr="sort-by-title-desc"
        selected={{eq this.sortBy "-title"}}
      >
        By title, descending
      </option>
      <option
        value="title"
        data-test-rr="sort-by-title-asc"
        selected={{eq this.sortBy "title"}}
      >
        By title, ascending
      </option>
    </select>
  </div>
  <div class="rr-search-panel">
    <Input
      @type="text"
      class="rr-input"
      @value={{this.searchTerm}}
      data-test-rr="search-box"
      {{on "blur" this.updateSearchTerm}}
    />
    <button
      type="button"
      class="rr-search-button"
      {{on "click" this.updateSearchTerm}}
    >
      {{fa-icon "search"}}
    </button>
  </div>
</div>
<ul class="rr-list">
  {{#each this.model as |song|}}
    <li class="rr-list-item" data-test-rr="song-list-item">
      {{capitalize song.title}}
      <StarRating
        class="fr"
        @rating={{song.rating}}
        @onClick={{fn this.updateRating song}}
      />
    </li>
  {{else}}
    <li class="tc">
      No
      {{capitalize this.band.name}}
      songs yet, why don't you
      <a href="#" onclick {{action "addSong"}}>
        create one?
      </a>
    </li>
  {{/each}}
</ul>
<div class="rr-new-label">
  {{#if this.isAddingSong}}
    <form
      class="rr-inline-form"
      data-test-rr="new-song-form"
      {{on "submit" this.saveSong}}
    >
      <Input
        @type="text"
        @value={{this.newSongTitle}}
        class="rr-input"
        placeholder={{this.newSongPlaceholder}}
        data-test-rr="new-song-input"
      />
      <button
        type="submit"
        class="rr-action-button"
        disabled={{this.isAddButtonDisabled}}
        data-test-rr="new-song-button"
        {{on "click" this.saveSong}}
      >
        Add
      </button>
      <button class="rr-cancel-icon" {{on "click" this.cancelAddSong}}>
        {{fa-icon "times"}}
      </button>
    </form>
  {{else}}
    <div class="rr-new-label">
      <label data-test-rr="new-song-label" {{on "click" this.addSong}}>
        {{fa-icon "plus"}}
        <span class="ml1">
          Add new song
        </span>
      </label>
    </div>
  {{/if}}
</div>
<div class="rr-pagination-links">
  {{#if this.hasPrevPage}}
    {{#link-to
      (query-params pageNumber=(dec this.pageNumber))
      class="rr-pagination-prev"
      data-test-rr="pagination-prev"
    }}
      {{fa-icon "angle-left"}}Prev
    {{/link-to}}
  {{/if}}
  {{#if this.hasNextPage}}
    {{#link-to
      (query-params pageNumber=(inc this.pageNumber))
      class="rr-pagination-next"
      data-test-rr="pagination-next"
    }}
      Next{{fa-icon "angle-right"}}
    {{/link-to}}
  {{/if}}
</div>