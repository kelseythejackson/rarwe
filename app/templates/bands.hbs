<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each this.model as |band|}}
      <li class="rr-list-item">
        <LinkTo
          @route="bands.band.songs"
          @model={{band.slug}}
          class="rr-band-link"
        >
          {{band.name}}
          <span class="rr-pointer">
            {{fa-icon "angle-right"}}
          </span>
        </LinkTo>
      </li>
    {{/each}}
  </ul>
  <div class="rr-new-label">
    {{#if this.isAddingBand}}
      <Input
        @type="text"
        @value={{this.newBandName}}
        class="rr-input"
        placeholder="New band"
        data-test-rr="new-band-input"
      />
      <button
        type="button"
        class="rr-action-button"
        {{on "click" this.saveBand}}
      >
        Add
      </button>
      <button class="rr-cancel-icon" {{on "click" this.cancelAddBand}}>
        {{fa-icon "times"}}
      </button>
    {{else}}
      <div class="rr-new-label">
        <label {{on "click" this.addBand}}>
          {{fa-icon "plus"}}
          <span class="ml1">
            Add new band
          </span>
        </label>
      </div>
    {{/if}}
  </div>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>